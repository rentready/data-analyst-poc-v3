# Streamlit secrets configuration
# Copy this file to secrets.toml and add your actual values

# ==========================================
# AZURE AI SEARCH (Knowledge Base)
# ==========================================
[azure_search]
service_name = "your-search-service-name"
endpoint = "https://your-search-service-name.search.windows.net"
admin_key = "YOUR_AZURE_SEARCH_ADMIN_KEY"
query_key = "YOUR_AZURE_SEARCH_QUERY_KEY"
index_name = "knowledge-base-index"

# ==========================================
# EMBEDDINGS CONFIGURATION
# ==========================================
[embeddings]
# Model name for embeddings generation
model = "text-embedding-3-large"
# Embedding dimensions (1536 for text-embedding-3-large)
dimensions = 1536
# Batch size for embedding generation
batch_size = 16
# Azure OpenAI endpoint for embeddings (may differ from main GPT endpoint)
api_base = "https://openai.cognitiveservices.azure.com/"
api_key = "YOUR_EMBEDDINGS_API_KEY"
api_version = "2023-05-15"

# ==========================================
# SEARCH CONFIGURATION
# ==========================================
[search]
# Enable semantic search (Azure AI Search feature)
use_semantic_search = true
# Enable hybrid search (keyword + vector)
use_hybrid_search = true
# Number of top results to return
top_k = 5
# Minimum relevance score (0.0 = no filtering, 1.0 = perfect match only)
min_score = 0.0

# ==========================================
# CHUNKING CONFIGURATION
# ==========================================
[chunking]
# Maximum chunk size in characters
chunk_size = 1000
# Overlap between chunks in characters
chunk_overlap = 200
# Chunking strategy: 'semantic', 'fixed_size', or 'sentence'
strategy = "semantic"

# ==========================================
# AZURE AI FOUNDRY (Required)
# ==========================================
[azure_ai_foundry]
# Azure AI Foundry project endpoint
proj_endpoint = "https://YOUR-RESOURCE.services.ai.azure.com/api/projects/YOUR-PROJECT"
# Model deployment name for agents
model_deployment_name = "gpt-4.1-200K"

# ==========================================
# OPENAI CONFIGURATION (Required)
# ==========================================
[open_ai]
# Azure OpenAI API Key
api_key = "YOUR_AZURE_OPENAI_API_KEY"
# Model deployment name
model = "gpt-4.1-200K"
# Azure OpenAI endpoint base URL (for Azure OpenAI)
base_url = "https://YOUR-RESOURCE.openai.azure.com/"

# ==========================================
# AZURE AUTHENTICATION (Required for MSAL)
# ==========================================
[env]
# Azure AD Application (Client) ID
AZURE_CLIENT_ID = "YOUR_CLIENT_ID"
# Azure AD Application Client Secret
AZURE_CLIENT_SECRET = "YOUR_CLIENT_SECRET"
# Azure AD Tenant ID
AZURE_TENANT_ID = "YOUR_TENANT_ID"

# ==========================================
# APPLICATION SETTINGS (Optional)
# ==========================================
[app]
# Maximum tokens for responses
max_tokens = 1000
# Temperature for model responses (0.0 - 1.0)
temperature = 0.1

# ==========================================
# APPLICATION INSIGHTS (Optional)
# ==========================================
[observability]
# Application Insights connection string for telemetry
applicationinsights_connection_string = "InstrumentationKey=YOUR_KEY;IngestionEndpoint=https://YOUR-REGION.in.applicationinsights.azure.com/;LiveEndpoint=https://YOUR-REGION.livediagnostics.monitor.azure.com/;ApplicationId=YOUR_APP_ID"

# ==========================================
# MCP SERVER CONFIGURATION (Optional)
# ==========================================
[mcp]
# MCP Server Client ID
mcp_client_id = "YOUR_MCP_CLIENT_ID"
# MCP Server Client Secret
mcp_client_secret = "YOUR_MCP_CLIENT_SECRET"
# MCP Server label/name
mcp_server_label = "rentready_mcp"
# MCP Server URL
mcp_server_url = "https://your-mcp-server.azurewebsites.net/mcp"
# Allowed MCP tools (empty list allows all tools)
allowed_tools = []

# ==========================================
# LEGACY CONFIGURATION (Deprecated)
# ==========================================
# Vector Store ID for old File Search Tool (no longer used with Azure AI Search)
# vector_store_id = "vs_YOUR_VECTOR_STORE_ID"
